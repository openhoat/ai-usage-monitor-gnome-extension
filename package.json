{
  "name": "ai-usage-monitor-gnome-extension",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Monitor AI subscription usage (Claude, OpenAI, Ollama) in GNOME Shell",
  "author": "Olivier Penhoat <openhoat@gmail.com> (http://headwood.net/)",
  "license": "MIT",
  "homepage": "https://github.com/openhoat/ai-usage-monitor-gnome-extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/openhoat/ai-usage-monitor-gnome-extension.git"
  },
  "bugs": {
    "url": "https://github.com/openhoat/ai-usage-monitor-gnome-extension/issues"
  },
  "keywords": [
    "gnome",
    "gnome-shell",
    "extension",
    "ai",
    "claude",
    "openai",
    "ollama",
    "usage",
    "monitor"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "wireit",
    "dev": "npm run build && bash scripts/install.sh && dbus-run-session -- gnome-shell --wayland",
    "start": "node dist/fetch-usage.js",
    "test": "wireit",
    "test:watch": "vitest",
    "qa": "wireit",
    "qa:fix": "biome check --write .",
    "changelog": "node scripts/generate-changelog.js",
    "bump": "node scripts/bump-version.js",
    "validate": "wireit",
    "prepare": "husky",
    "pack": "bash scripts/generate-zip.sh"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "qa": {
      "command": "biome check .",
      "files": [
        "biome.json",
        "src/**/*.ts",
        "extension/**/*.js"
      ],
      "output": []
    },
    "test": {
      "command": "vitest run",
      "files": [
        "src/**/*.ts",
        "src/**/*.test.ts"
      ],
      "output": []
    },
    "validate": {
      "dependencies": [
        "qa",
        "build",
        "test"
      ]
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@commitlint/cli": "20.4.2",
    "@commitlint/config-conventional": "20.4.2",
    "@testing-library/jest-dom": "6.9.1",
    "@types/node": "^22.0.0",
    "happy-dom": "20.7.0",
    "husky": "9.1.7",
    "typescript": "^5.7.0",
    "vitest": "4.0.18",
    "wireit": "0.14.12"
  },
  "volta": {
    "node": "24.13.0"
  }
}
